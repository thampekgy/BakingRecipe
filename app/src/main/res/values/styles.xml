<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLogin1</item>
        <item name="colorPrimaryDark">@color/colorLogin2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Login -->
    <style name="LoginPage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorLogin1</item>
        <item name="colorPrimaryDark">@color/colorLogin2</item>
        <item name="colorAccent">@color/colorLogin3</item>
        <item name="color">@color/colorWhite</item>
    </style>


</resources>
